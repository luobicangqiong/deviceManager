	/*
	 * 查询维修记录表，列出我的任务
	 * 
	 */
	public String queryAllWeixiu(){
		
		int page = Integer.valueOf(request.getParameter("page")==null?"1":request.getParameter("page"));
    	int pageSize = Integer.valueOf(request.getParameter("rows")==null?"5":request.getParameter("rows"));
    	
    	List<Repair> weixiuList = weiXiuGuanLiService.queryAllWeixiu(page,pageSize);
    	
    	
    	Iterator iterator = weixiuList.iterator();
    	JSONArray jsonArray = new JSONArray();
    	JSONObject finalObj = new JSONObject();
    	// 统计数据总行数 分页
    	finalObj.put("total", weiXiuGuanLiService.countAllweixiu());

    	while(iterator.hasNext())
    	{
    		JSONObject obj = new JSONObject();
    		
    		Repair repair = (Repair)iterator.next();
    		obj.put("repairId", repair.getRepairId());
    		obj.put("empRepairmanId", repair.getEmpRepairmanId());
    		obj.put("reportRepairId", repair.getReportRepairId());
    		obj.put("repairSchdulTime", repair.getRepairSchdulTime());
    		obj.put("machineCheckRecord", repair.getMachineCheckRecord());
    		obj.put("machineCheckTime", repair.getMachineCheckTime());
    		obj.put("repairRecord", repair.getRepairRecord());
    		obj.put("repairWorkTime", repair.getRepairWorkTime());
    		obj.put("repairLabourPrice", repair.getRepairLabourPrice());
    		obj.put("materialPrice", repair.getMaterialPrice());
    		obj.put("repairPromise", repair.getRepairPromise());
    		obj.put("attentionMatter", repair.getAttentionMatter());
    		obj.put("repairState", repair.getRepairState());
    		obj.put("repairDelayDegree", repair.getRepairDelayDegree());
    		obj.put("empSchedulingManId", repair.getEmpSchedulingManId());
    		
    		jsonArray.add(obj);
    	}
    	
    	System.out.println(jsonArray.toString());
    	finalObj.put("rows", jsonArray);
    	//System.out.println("-----"+finalObj.toString()+"-----");
    	  response.setContentType("text/html;charset=UTF-8");
    	  PrintWriter out = null;
    	try {
    		out = response.getWriter();
    	} catch (IOException e) {
    		
    		e.printStackTrace();
    	}   
    	   
    	   out.println(finalObj.toString());   
    	   out.flush();   
    	   out.close();  
		return null;
		
	}

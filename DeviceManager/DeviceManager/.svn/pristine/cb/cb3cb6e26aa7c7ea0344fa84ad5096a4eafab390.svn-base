            },

             success: function(data){
             	alert(data.info);
             	var machineCheckRecord=$("#check-en").val();
									$("#checck-time").val();
									$("#attation").val();
									$("#repair-say").val();
									$("#work_time").val();
									$("#lobar_price").val();
									
									$("#materia_price").val();
									$("#promice").val();
             	
				

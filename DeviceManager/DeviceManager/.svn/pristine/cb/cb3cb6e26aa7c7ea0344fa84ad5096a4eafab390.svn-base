						      keyboard: true
						   })});
						   
						   $(function(){
						   	var row;
						   	
						   	$(".delete-cus").click(
						   		function(){
						   			var ro=$('#dg').datagrid('getSelected');
						   			if(ro){
						   				
						   				row=ro;
						   				  $(".delete-cus").attr("data-target","#myModal3");
						   			}else{
						   				alert("请选择一行");   	   
	   	                             $("#myModal3").hide();
	   	                                   $(".delete-cus").attr("data-target","none");
						   				
						   			}
						   			
					   		}
